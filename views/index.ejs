<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Administrador de Pacientes</title>
    <!-- <link rel="stylesheet" href="/css/bootstrap.css">     -->
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

</head>
<body class="bg-pink">
    <h2 class="text-center my-5 titulo"><a href="/create"><i class='bx bxs-plus-circle'></i></a>Administrador de Pacientes de Veterinaria<a href="/create"><i class='bx bxs-user-plus'></i></a></h2>
    <div class="container mt-5 p-5">
        <div id="contenido" class="row">
            <div class="col-md-6 agregar-cita">

            <div class="col-md-6">
                <h2 id="administra" class="mb-4 text-center">Administra tus Citas</h2>
                <ul id="citas" class="list-group lista-citas">
                    <% results.forEach((user)=> { %>
                    <div id="id" class="cita p-2">
                        <h2 class="card-title font-weight-bolder"> <%= user.mascota %></h2>
                        <p>
                            <span class="font-weight-bolder">Propietario: <%= user.propietario %> </span>
                        </p>
                        <p>
                            <span class="font-weight-bolder">Teléfono: <%= user.telefono%></span>
                        </p>
                        <p>
                            <span class="font-weight-bolder">Fecha: <%= user.fecha %></span>
                        </p>
                        <p>
                            <span class="font-weight-bolder">Síntomas: <%= user.sintomas %></span>
                        </p>
                        <p>
                            <a href="/edit/<%= user.id %>"><i class='bx bxs-edit'></i></a>
                            <a href="/delete/<%= user.id %>"><i class='bx bxs-message-minus'></i></a>
                        </p>
                        <p>
                            <span class="font-weight-bolder">__________________________________</span>
                        </p>
                    </div>
                    <% }) %>

                </ul>
            </div>


        </div> <!--.row-->
    </div><!--.container-->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <script src="js/apps.js"></script>

</body>
</html>
